# list
#alias ls='/bin/ls -FG'
#alias ls='gls --color=always -FG'
# above is set in $HOME/.oh-my-zsh/lib/theme-and-appearance.zsh
#alias lp='ls -lrth'
alias lp='exa -l --sort newest'


# line/field counts
alias wcl='wc -l'
alias wcc="awk -F'\t' '{print NF; exit}'"

alias ..="cd .."

# colorize grep
alias grep='/usr/bin/grep --color=auto'

# requires brew install grep to install GNU grep
#alias grep='/usr/local/bin/ggrep --color=auto'

# make all necessary parent directories
alias mkdir='mkdir -p'

# chop long lines in less
alias lezz='less -S'

# nice tabulatation
#alias l="(sed ':x s/\(^\|\t\)\t/\1 \t/; t x' | column -ts$'\t' | less -SFX)"
alias l="(sed 's/\(^\|\t\)\t/\1 \t/' | column -ts$'\t' | less -SFX)"


alias where='readlink'

# colorize grex
alias grex="grex -c"

# start R vanilla
alias R='R --no-save --no-restore-data'

# glances theme for light background
alias glances='glances --theme-white'

# gnucore
alias zcat='gzcat'

# radian for R
alias r="radian"

